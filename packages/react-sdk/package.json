{
  "name": "@bitbnpl/react",
  "version": "0.1.0",
  "description": "React SDK for BitBNPL - Bitcoin-backed Buy Now Pay Later",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm run build && npm publish --access public"
  },
  "keywords": [
    "bitcoin",
    "bnpl",
    "buy-now-pay-later",
    "react",
    "payments",
    "crypto"
  ],
  "author": "BitBNPL",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitbnpl/react-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/bitbnpl/react-sdk/issues"
  },
  "homepage": "https://bitbnpl.com"
}
